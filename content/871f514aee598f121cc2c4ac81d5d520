			event.preventDefault();
			$('#categoryflag').val(1);
			$('#frmgrsratescenter').submit();
		});
		$("#moneymarketlink").click(function(event) {
			event.preventDefault();
			$('#categoryflag').val(2);
			$('#frmgrsratescenter').submit();
