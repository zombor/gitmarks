<script language="JavaScript" type="text/javascript">
	function clearText(obj)	{
		if(obj.value=='Enter email to sign up!') {
			obj.value = '';
			return true;
		}
		else
		{
			obj.value=='Enter email to sign up!';
			return true;
		}		
	}
	function setText(obj)	{
		if(obj.value=='') {
			obj.value = 'Enter email to sign up!';
			return true;
		}
	}
	

</script>

