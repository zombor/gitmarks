	$(document).ready(function(){
	//alert($(document).height());	
	var docheight = parseInt($(document).height());	
	var sidenbarheight = parseInt($("#sidebar").height());	
	sidenbarheight = (sidenbarheight + 800);
	//alert(docheight);
	//alert(sidenbarheight);
		
	if(docheight > sidenbarheight){
		$("#mra").css("position","absolute");
		$("#mra").css("top",(docheight - 390));		
		$("#myf").css("position","absolute");
		$("#myf").css("top",(docheight - 530));
		
	}

